<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error" > 
                <%= errorMessage %> 
            </div> 
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <!-- Fullname of the user -->
            <div class="form-control">
                <label for="fullname">Fullname</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'fullname') ? 'invalid' : '' %>"
                    type="fullname" 
                    name="fullname" 
                    id="fullname" 
                    value="<%= oldValue.fullname %>">
            </div>

            <!-- Users email address -->
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldValue.email %>">
            </div>

            <!-- Users password input  -->
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldValue.password %>">
            </div>

            <!-- Repeat password  -->
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldValue.confirmPassword %>">
            </div>
            <button class="btn" type="submit">Sign Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>